{% extends '::base.html.twig' %}

{% block title %}
    {{ parent() }}
    Dashboard
{% endblock %}

{% block javascripts %}
    <script type="text/JavaScript">
        function autoRefresh() {
            setTimeout("location.reload(true);", 120 * 1000);
        }

        autoRefresh();
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        <h1 class="col-lg-12 text-center jarvis-title"><img src="{{ asset('http://neweuappfactory.com.lamp02.cegeka.be/wp-content/uploads/2013/10/cegeka-180x180.jpg') }}" class="jarvis-logo" alt="Cegeka Logo" /> Jarvis Dashboard</h1>
    </div>

    {% for repository in repositories %}
        <div class="row">
            {{ include ('JarvisRadiatorBundle:Dashboard:entry.html.twig', { 'repository': repository }) }}
        </div>
    {% endfor %}
{% endblock %}