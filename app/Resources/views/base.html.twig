<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Jarvis - {% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('bundles/jarvisradiator/boostrap/css/bootstrap.css') }}" />
            <link rel="stylesheet" type="text/css" href="{{ asset('bundles/jarvisradiator/style/application.css') }}" />
            <link rel="stylesheet" type="text/css" href="{{ asset('bundles/jarvisradiator/style/repository.css') }}" />
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block bodywrapper %}
            <div class="container-fluid" id="jarvis-wrapper">
                {% block body %}{% endblock %}
            </div>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
